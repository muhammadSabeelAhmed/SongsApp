<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5sp">

            <ImageView
                android:id="@+id/favRecSong_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favRecSong_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:singleLine="true"
                android:text="@string/txt_song_name"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/favRecSong_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="5sp"
                android:paddingTop="5sp"
                android:paddingRight="5sp"
                android:singleLine="true"
                android:text="@string/txt_song_name"
                android:textColor="@color/black"
                android:textSize="@dimen/ex_small_text"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/favRecSong_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:fontFamily="@font/light"
        android:gravity="center_vertical|center_horizontal"
        android:lines="2"
        android:text="x"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/medium_txt"
        android:textStyle="normal" />
</RelativeLayout>