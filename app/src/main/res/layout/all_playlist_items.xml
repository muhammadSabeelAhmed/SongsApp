<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="5sp">

            <ImageView
                android:id="@+id/playlistSong_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_border"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playlistSong_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="5sp"
                android:paddingTop="5sp"
                android:paddingRight="5sp"
                android:singleLine="true"
                android:text="@string/txt_song_name"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small_text"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/playlistSong_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="5sp"
                android:paddingTop="2dp"
                android:paddingRight="5sp"
                android:singleLine="false"
                android:text="@string/txt_song_name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/playlistSong_fav"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:src="@drawable/ic_fav_unselect" />
</RelativeLayout>